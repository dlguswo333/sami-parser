{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "dist/cjs",
        "strictNullChecks": true,
        "target": "ES2018",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "removeComments": true,
    },
}
